{% extends "Tricks/head.html.twig" %}
{% block body %}
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="login newPass">
                <div class="post-preview signup">
                    {{ form_start(form) }}
                    <h2 class="text-center">Nouveau mot de passe</h2>
                    {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
                    {{ form_row(form.password_confirmed, {'label' : 'Confirmez le Mot de passe', 'attr' : {'placeholder'
                    : 'Confirmation du mot de passe'}}) }}
                    {{ form_rest(form) }}

                    <div class="form-group text-center">
                        <button type="submit" class="button btn-primary btn-block">Modifier</button>
                    </div>
                    {{ form_end(form)}}

                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}