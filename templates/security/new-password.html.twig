{% extends "base-login.html.twig" %}
{% block body %}
<div class="container" style="height: 457px;">
    <h1 class="text-center" style="margin-bottom: 50px;">Snow Tricks </h1>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="login newPass">
                <div class="post-preview signup">
                    {{ form_start(form) }}
                    <h2 class="text-center">Nouveau mot de passe</h2>
                    {{ form_row(form.password.first) }}
                    {{ form_row(form.password.second) }}

                    <div class="form-group text-center">
                        <button type="submit" class="button btn-primary btn-block">Modifier</button>
                    </div>
                    {{ form_end(form)}}

                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}