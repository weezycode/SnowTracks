{% extends "Tricks/head.html.twig" %}
{% block body %}
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <div class="login">
                <div class="post-preview">
                    {% if error %}
                    <div class="alert alert-dark alert-dismissible">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong class="danger">{{ error.messageKey|trans(error.messageData, 'security') }} </strong>
                    </div>
                    {% endif %}
                    <form action="{{ path('security_login') }}" method="POST">
                        <h2 class="text-center">Se connecter</h2>
                        <div class="form-group">
                            <label for="email">Adresse email</label>
                            <input type="email" class="form-control formeControl" name="_username"
                                value="{{ last_username }}" placeholder="Email" required="required">
                        </div>
                        <div class="form-group">
                            <label for="email">Password</label>
                            <input type="password" class="form-control formeControl" name="_password"
                                placeholder="Password" required="required">
                        </div>
                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}" />
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group text-center log-in">
                            <button type="submit" class="button btn-primary btn-block">Se connecter</button>
                        </div>
                        <div class="clearfix">
                            <p class="text-center">Pas encore de compte ?
                                <a href="{{path('security_register')}}">Créer un compte</a>
                            </p>
                        </div>
                        <div class="clearfix">
                            <p class="text-center">Retounez à l'accueil
                                <a href="{{path('show_tricks')}}">Home</a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}