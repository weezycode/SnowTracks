<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- Favicon-->
    <!-- Bootstrap icons-->
    <!-- Core theme CSS (includes Bootstrap)-->
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
    <!-- Bottom Navbar -->
    <nav
        class="navbar navbar-light bg-light border-top navbar-expand d-md-none d-lg-none d-xl-none fixed-bottom mobile">
        <ul class="navbar-nav ms-auto py-4 py-lg-0 text-center">
            <li class="nav-item listTrick"><a class="nav-link px-lg-3 py-3 py-lg-4"
                    href="{{path('show_tricks')}}#tricks"><i class="bi bi-view-list listTrick"></i></a>
            </li>
            {% if app.user %}
            {% if app.user.actived == false %}
            <li class="nav-item addtrick"><a class="nav-link px-lg-3 py-3 py-lg-4" href="javascript:void(0)"
                    data-bs-toggle="popover" title="Bonjour,{{ app.user.pseudo }}"
                    data-bs-content="Vous n'avez pas encore valider votre email', validez le pour profiter des services !"><i
                        class="bi bi-plus-square-fill addtrick"></i></a></li>

            {% elseif app.user.actived == true %}
            <li class="nav-item addtrick"><a class="nav-link px-lg-3 py-3 py-lg-4" href="{{path('create_trick')}}"><i
                        class="bi bi-plus-square-fill addtrick"></i></a></li>
            {% endif %}
            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="{{path('security_logout')}}"><i
                        class="bi bi-box-arrow-left logout"></i></a>

            </li>
            {% else %}
            <li class="nav-item log"><a class="nav-link px-lg-3 py-3 py-lg-4" href="{{path('security_login')}}"><i
                        class="bi bi-box-arrow-right log"></i></a></li>
            {% endif %}

        </ul>
    </nav>

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="{{path('show_tricks')}}"><img src=" {{ asset('images/MOUDOU.png') }}"
                    height=" 70" alt="logo" /> </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4"
                            href="{{path('show_tricks')}}#tricks">Tricks</a>
                    </li>
                    {% if app.user %}
                    <div class="btn-group group">
                        <button class="btn user-dropdown btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">Bonjour,{{ app.user.pseudo }}</button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="index.php?action=deleteMe">Supprimer mon compte</a></li>
                        </ul>
                    </div>
                    {% if app.user.actived == false %}
                    <li class="nav-item"><a href="javascript:void(0)" class="nav-link px-lg-3 py-3 py-lg-4"
                            data-bs-toggle="popover" title="Bonjour,{{ app.user.pseudo }}"
                            data-bs-content="Vous n'avez pas encore valider votre email', validez le pour profiter des services !">
                            Ajouter
                            un Trick</a></li>
                    {% elseif app.user.actived == true %}
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4"
                            href="{{path('create_trick')}}">Ajouter
                            un Trick</a></li> {% endif %}

                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4"
                            href="{{path('security_logout')}}">Déconnexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="{{path('security_login')}}">Se
                            connecter</a></li>
                    <li class=" nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4"
                            href="{{path('security_register')}}">S'inscrire</a></li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>

    <body class="">


        <!-- Header-->
        {% block body %} {% endblock %}

        {# list end #}
        <!-- Footer-->
        {% block javascripts %}
        <!-- Bootstrap core JS-->
        <!-- Core theme JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        {{ encore_entry_script_tags('app') }}



        {% endblock %}

    </body>

</html>