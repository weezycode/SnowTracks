{% extends 'head.html.twig' %}
{% block body %}
<div class="wrapper" id="tricks">
    <h1 class="fw-bolder mb-1 text-center">Choisir une image de couverture</h1>
    <div class="container-sm">
        <div class="row justify-content-center pb-0">

            {% for image in imageMain %}

            <div class="col-md-3">
                <div class="card p-3">
                    <div class="text-center"> <img class="card-img-top" style="height :250px;"
                            src=" {{ asset('images/uploadFigure/' ~ image.filename) }}" width="200">

                    </div>
                    <form action="{{path('image_main', { slug: image.id })}}" method=" post">
                        <input type="hidden" name="token" value="{{ csrf_token('update-image') }}" />
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="imageMain" value=" {{ image.id }}"
                                id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                SÃ©lectionner une image
                            </label>
                        </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="col-auto imageMain">
            <button type="submit" class="btn btn-success ">Valider</button>


            </form>
        </div>
    </div>
</div>
{% endblock %}