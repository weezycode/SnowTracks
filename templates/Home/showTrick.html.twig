{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1 text-center">{{ trickDetails.name }}</h1>
                    <!-- Post meta content-->
                </header>
                <!-- Preview image figure-->
                {% for image in trickDetails.image %}
                <figure class="mb-4 text-center">
                    <img class="img-fluid rounded" src="{{ asset('images/uploadFigure/' ~ image.filename) }}"
                        alt="..." />
                </figure>
                {% endfor %}
                <!-- Post content-->
                <section class="mb-5">
                    <p class="fs-5 mb-4">{{trickDetails.content}}</p>
                    <div class="text-muted fst-italic mb-2">
                        {% if trickDetails.createdAt < trickDetails.updatedAt %} <em>dernière mise à jour le
                            {{trick.updatedAt |
                            date("d/m/Y")}}</em>
                            {% else %}
                            <em>Publié le {{trickDetails.createdAt | date("d/m/Y")}}</em>
                            {% endif %} par {{ trickDetails.user.pseudo}}</div>
                </section>
            </article>
            <!-- Comments section-->
        </div>
    </div>

    <!--Image Carosel-->
    <div class="col-md-12">
        <div class="d-flex justify-content-center">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://placeimg.com/1080/500/animals" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>My Caption Title (1st Image)</h5>
                            <p>The whole caption will only show up if the screen is at least medium size.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://placeimg.com/1080/500/arch" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://placeimg.com/1080/500/nature" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://placeimg.com/1080/502/arch" alt="Four slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://placeimg.com/1080/505/nature" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://placeimg.com/1080/508/nature" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>


</div>

{% endblock %}